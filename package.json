{
  "name": "pixijs-fight",
  "version": "0.0.0",
  "description": "JS/TS Fight Game Using pixiJS rendering library",
  "main": "app.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc && copyfiles index.html ./assets/**/* dist && copyfiles -u 1 src/pixi/**/* dist",
    "clean:build": "npm run clean && npm run build",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohnnyWombwell/pixijs-fight.git"
  },
  "keywords": [
    "2D",
    "fighting",
    "game"
  ],
  "author": "John Wilson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JohnnyWombwell/pixijs-fight/issues"
  },
  "homepage": "https://github.com/JohnnyWombwell/pixijs-fight#readme",
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@web/dev-server-esbuild": "^0.3.3",
    "@web/test-runner": "^0.15.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "pixi.js": "^6.5.6",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  }
}
